<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>To Do List</title>
  <link rel="shortcut icon" href="favicon.ico">
  <link rel="stylesheet" href="font-awesome.min.css">
  <link rel="stylesheet" href="styles.css">
</head>

<body>
  <section class="container">

    <section class="containerSmall">
      <h1>To do List</h1>
    </section>

    <ul class="messages">
      <% for(var i=0; i<messages.length; i++) {%>
        <li class="message">
          <span><%= messages[i].item %></span>
          <span><i class="fa fa-trash" aria-hidden="true"></i></span>
        </li>
        <% } %>
    </ul>

    <section class="addSomething">
      <h2>Add Something To The List</h2>
      <form action="/todoitems" method="POST">
        <input type="text" placeholder="item" name="item">
        <button type="submit">Add Item</button>
        <button id="deleteAll" type="button" name="button">Clear All</button>
      </form>
    </section>

  </section>

  <script src="main.js"></script>

</body>

</html>